@model IEnumerable<TeachMeProject.Models.Instructor>


    <link rel="stylesheet" href="~/css/instructors.css">
    

    <section id="instructors">
        <!-- Slideshow container -->
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
                <img src="~/imgs/pexels-diva-plavalaguna-6937844.jpg" style="width:100%">
                <div class="text">
                    <h1>OUR INSTRUCTORS</h1><br>

                    <p>"A good teacher is a master of simplification and an enemy of simplism."</p>

                </div>
            </div>

            <div class="mySlides fade">
                <img src="~/imgs/pexels-katerina-holmes-5905709.jpg" style="width:100%">
                <div class="text">
                    <h1>OUR INSTRUCTORS</h1><br>

                    <p>"A good teacher is a master of simplification and an enemy of simplism."</p>

                </div>
            </div>

            <div class="mySlides fade">
                <img src="~/imgs/pexels-vanessa-garcia-6325978.jpg" style="width:100%">
                <div class="text">
                    <h1> OUR INSTRUCTORS</h1><br>

                    <p>"A good teacher is a master of simplification and an enemy of simplism."</p>

                </div>
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">PREV</a>
            <a class="next" onclick="plusSlides(1)">NEXT</a>

            <!-- The dots/circles -->
            <div class="dots" style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>

            </div>
        </div>
    </section>


    <!--Instructors Section-->
    <div id="heading">
        <h1>MEET THEM</h1>
    </div>
    <div class="main">
        @foreach (var instructor in Model)
        {
        <div class="profile-card">
            <div class="img">
                <img src="@Url.Content(instructor.ImagePath)" alt="">
            </div>
            <div class="caption">
                <h3>@instructor.Name</h3>
                <p>@instructor.JobTitle</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>
        }
        
    </div>


    <!--Contact Us Btn-->

    <a href="/Home/Contact">
        <button id="contact-us">
            <i class="fa-solid fa-comments"></i>
        </button>
    </a>


    </section>

    <script src="~/js/slides.js"></script>
    <script src="~/js/contact-instructors.js"></script>


